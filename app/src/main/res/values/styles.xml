<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/name</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:background">#E00000</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button1">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_below">@+id/checkbox4</item>
    <item name="android:layout_marginTop">24dp</item>
    <item name="android:layout_marginBottom">24dp</item>
    <item name="android:background">#E00000</item>
    <item name="android:textColor">#FFFF</item>
    <item name="android:textStyle">bold</item>
</style>

    <style name="button2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/group</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:background">#E00000</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/edit_text</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:background">#E00000</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/result</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:background">#E00000</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_below">@+id/top</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="image_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="edit_text_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/image</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="image_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
</resources>
