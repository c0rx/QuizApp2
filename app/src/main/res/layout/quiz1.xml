<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:context="com.example.android.quizapp.quiz1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/top"
            style="@style/image_top"
            android:src="@drawable/first_aid"/>

        <ImageView
            android:id="@+id/first_aid"
            style="@style/image"
            android:src="@drawable/quiz1"/>

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/quiz1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_aid"
            android:layout_margin="12dp"
            android:text="@string/quiz1"
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz1"
            android:text="@string/q1_1"/>

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkbox1"
            android:text="@string/q1_2"/>

        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkbox2"
            android:text="@string/q1_3"/>

        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkbox3"
            android:text="@string/q1_4"/>

        <Button
            android:id="@+id/button"
            style="@style/button1"
            android:onClick="submitAnswer"
            android:text="@string/proceed"/>

    </RelativeLayout>
</ScrollView>